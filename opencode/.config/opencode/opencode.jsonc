{
  "$schema": "https://opencode.ai/config.json",
  "theme": "gruvbox-material",
  // "model": "opencode/claude-opus-4-5",
  "model": "openai/gpt-5.2",
  "agent": {
    "build": {
      "mode": "primary",
      // "model": "opencode/claude-opus-4-5",
      // "prompt": "{file:./prompts/anthropic.txt}",
      // "reasoningEffort": "none"
      "model": "openai/gpt-5.3-codex",
      "prompt": "{file:./prompts/codex.txt}",
      "reasoningEffort": "xhigh"
    },
    "plan": {
      "mode": "primary",
      // "model": "opencode/claude-opus-4-5",
      // "prompt": "{file:./prompts/anthropic.txt}",
      // "reasoningEffort": "high"
      "model": "openai/gpt-5.3-codex",
      "prompt": "{file:./prompts/codex.txt}",
      "reasoningEffort": "xhigh"
    },
    "explore": {
      "model": "openai/gpt-5.3-codex",
      "reasoningEffort": "low"
    }
  },
  "plugin": [
    // "opencode-anthropic-auth@0.0.9",
    // "opencode-handoff@0.3.2",
    "@franlol/opencode-md-table-formatter@0.0.3"
    // "@tarquinen/opencode-dcp@1.2.7",
    // "opencode-anthropic-websearch@latest"
    // "opencode-websearch-cited@1.2.0"
  ],
  // "provider": {
  //   "openai": {
  //     "options": {
  //       "websearch_cited": {
  //         "model": "gpt-5.1-codex-mini"
  //           "reasoningEffort": "low"
  //       }
  //     }
  //   }
  // },
  "mcp": {
    "playwriter": {
      "type": "local",
      "command": ["bun", "x", "playwriter@latest"],
      "enabled": false
    },
    "xcodebuildmcp": {
      "type": "local",
      "command": ["bun", "x", "-y", "xcodebuildmcp@latest"],
      "enabled": false
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": false
    }
  },
  "permission": {
    "external_directory": {
      "*": "ask",
      "{env:HOME}/.config/opencode/skills/*": "allow"
    }
  },
  "autoupdate": true
}
